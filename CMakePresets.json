{
   "version" : 3,
   "configurePresets" : [
      {
         "name" : "default",
         "generator" : "Ninja Multi-Config",
         "binaryDir" : "${sourceDir}/build",
         "cacheVariables" : {
            "CMAKE_TOOLCHAIN_FILE" : "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "VCPKG_MANIFEST_DIR" : "${sourceDir}"
         }
      }
   ],
   "buildPresets" : [
      {
         "name" : "debug",
         "configurePreset" : "default",
         "configuration" : "Debug"
      },
      {
         "name" : "release",
         "configurePreset" : "default",
         "configuration" : "Release"
      }
   ]
}